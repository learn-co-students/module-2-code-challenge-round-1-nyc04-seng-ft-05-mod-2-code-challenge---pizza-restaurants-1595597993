<%= form_with model: @restaurant, local: true do |f| %>

  <% if @restaurant.errors.any? %>
      <% @restaurant.errors.full_messages.each do |message| %>
          <h2><%= message %></h2>
      <% end %>
  <% end %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br><br>

  <%= f.label :address %><br>
  <%= f.text_field :address %><br><br>

  <%= f.collection_check_boxes :pizza_id, Pizza.all, :id, :name do |pizza| %>
    <%= pizza.label(class: "checkbox-inline") { pizza.check_box + pizza.text } %>
  <% end %>
  <%= f.submit %>
<% end %> 