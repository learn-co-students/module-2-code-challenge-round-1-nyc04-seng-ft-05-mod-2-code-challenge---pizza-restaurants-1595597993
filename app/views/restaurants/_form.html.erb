<%= form_for(@restaurant) do |f| %>

  <div class="field"> <%= f.label :name %><br>
  <%= f.text_field :name %></div>

  <div class="field"><%= f.label :address, "Address" %><br>
  <%= f.text_field :address %></div>

  <div class="field"><%= f.label :pizza_id %><br>
  <%= f.collection_check_boxes :pizza_ids, Pizza.all, :id, :name %></div>

  <div class="actions"><%= f.submit 'Submit', :class => 'btn btn-primary' %></div>

<% end %>