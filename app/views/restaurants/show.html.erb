<h1><%= @restaurant.name %></h1>
<p>Location: <%= @restaurant.address %></p>

<h4>All Pizzas:</h4>
<ul>
  <% @restaurant.pizzas.each do |pizza| %>
    <li> <%= link_to pizza.name, pizza_path(pizza) %> </li>
  <% end %>
</ul>
