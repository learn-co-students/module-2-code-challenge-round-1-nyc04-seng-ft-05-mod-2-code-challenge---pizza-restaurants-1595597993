<%= form_with model: @restaurant_pizza, local: true do |f| %>

  <% if @restaurant_pizza.errors.any? %>
      <% @restaurant_pizza.errors.full_messages.each do |message| %>
          <h2><%= message %></h2>
      <% end %>
  <% end %>

  <%= f.label :restaurant_id %>
  <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name %><br><br>

  <%= f.collection_check_boxes :pizza_id, Pizza.all, :id, :name do |pizza| %>
    <%= pizza.label(class: "checkbox-inline") { pizza.check_box + pizza.text } %>
  <% end %>
  
  <%= f.submit %>
<% end %> 