<h1>Let's Create a Pizza!</h1>


<%=form_with model: @pizza_restaurant do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :ingredients %>
<%= f.text_field :ingredients %>


<%= f.label :restaurant_id %>
<%= f.collection_select :restaurant_id, Restaurant.all, :id, :name%><br>

<%= f.submit "Create Pizza!"%>
<%end%>





