<h1>Pizza Form</h1>
<% if @errors %>
    <% @errors.each do |error| %>
    <p style="color:red"><%= error %></p>
    <% end %>
<% end %>

<%= form_for @pizza do |f| %>
<%= f.label :name %>
<%= f.text_field :name%>
<br>
<%= f.label :ingredients %>
<%= f.text_field :ingredients%>
<br>
<%= f.collection_select(:restaurant_ids, Restaurant.all, :id, :name) %>

<%= f.submit "Create Pizza" %>
<% end %>