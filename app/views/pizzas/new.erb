<h1>Create a Pizza</h1>

<% if @errors %>
  <% @errors.each do |error| %>
    <%= error %>
    <br>
  <% end %>
<% end %>

<%= form_for @pizza do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :ingredients %>
  <%= f.text_field :ingredients %>
  <%= f.label :restaurant %>
  <%= f.collection_select :restaurant_ids, Restaurant.all, :id, :name, prompt: true %>
  <br><br>
  <%= f.submit %>
<% end %>


