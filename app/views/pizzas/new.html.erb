<h1>New Pizza Form</h1>

<ul>
<% if @errors %>
    <% @errors.each do |error| %>
       <li><%= error %></li>
    <% end %>
<%end%>
</ul>

<%=form_with model:@pizza do |f|%>
    <%=f.label :name%>
    <%=f.text_field :name%>
    <%=f.label :ingredients%>
    <%=f.text_field :ingredients%>
    <%=f.collection_select :restaurant_id, Restaurant.all, :id, :name%>
    <%=f.submit%>
<%end%>