
<% if @pizza.errors.any? %>
  <% @pizza.errors.full_messages.each do |message|%>\
     <h3><%= message %> </h3>
  <%end%>
<%end%>

<%= form_with model: @pizza do |f|%>
<%= f.label :name %>
<%= f.text_field :name%>
<%= f.label :ingredients %>
<%= f.text_field :ingredients %>
<%= f.collection_select :restaurant_id, Restaurant.all, :id, :name %>
<%= f.submit %>
<% end %>